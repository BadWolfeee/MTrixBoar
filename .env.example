# Backend configuration
# Option A: one-line URL (takes precedence if set)
# DATABASE_URL=postgresql://postgres:admin@localhost:5432/telemetria
# For Docker Compose (backend reaches DB by service name 'db'):
# DATABASE_URL=postgresql://postgres:admin@db:5432/telemetria

# Option B: separate parts (used when DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=telemetria
DB_USER=postgres
DB_PASSWORD=admin

# App settings
SECRET_KEY=change-me
# Regex pattern for sensor tables
SENSOR_TABLE_PATTERN=^sens\d+$
# DB schema containing sensor tables
DB_SCHEMA=public
